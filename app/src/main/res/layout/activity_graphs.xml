<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/main2linear"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:context="com.example.cristian.mywallet.Main2Activity">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view1"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_margin="8dp"
            android:clickable="true"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true">
                <com.jjoe64.graphview.GraphView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/graph4"
                    android:clickable="true" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:text="Leyenda"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:textStyle="bold" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:showDividers="middle"
            android:divider="#545454">

            <TableRow>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="5dp"
                    android:id="@+id/imageView0"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="7dp"
                    android:background="#000000" />

                <TextView android:layout_marginLeft="12dp"
                    android:text="Presupuesto"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="2dp"/>
            </TableRow>

            <TableRow>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageView2"
                    android:layout_marginTop="8dp"
                    android:background="#ffe600" />

                <TextView android:layout_marginLeft="12dp"
                    android:text="Comida"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="2dp"/>
            </TableRow>

            <TableRow>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView3"
                android:layout_marginTop="8dp"
                android:background="#ff0000" />

                <TextView
                    android:layout_marginLeft="12dp"
                    android:text="Lujos"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"
                    android:layout_column="1"
                    android:layout_marginTop="2dp" />
            </TableRow>

            <TableRow>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView4"
                android:layout_marginTop="8dp"
                android:background="#00ff0d" />

                <TextView
                    android:layout_marginLeft="12dp"
                    android:text="BÃ¡sicos"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:layout_column="1"
                    android:layout_marginTop="2dp" />
            </TableRow>

            <TableRow>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView5"
                android:layout_marginTop="8dp"
                android:background="#00f7ff" />

                <TextView
                    android:layout_marginLeft="12dp"
                    android:text="Caprichos"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:layout_marginTop="2dp" />
            </TableRow>

            <TableRow>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView6"
                android:layout_marginTop="8dp"
                android:background="#0022ff" />

                <TextView
                    android:layout_marginLeft="12dp"
                    android:text="Mensual"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:layout_column="1"
                    android:layout_marginTop="2dp" />
            </TableRow>

            <TableRow>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView7"
                android:layout_marginTop="8dp"
                android:background="#9402d3" />

                <TextView
                    android:layout_marginLeft="12dp"
                    android:text="Transporte"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:layout_marginTop="2dp" />
            </TableRow>

            <TableRow>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView8"
                android:layout_marginTop="8dp"
                android:background="#ff8800" />

                <TextView
                    android:layout_marginLeft="12dp"
                    android:text="Otros"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:layout_marginTop="2dp" />
            </TableRow>
        </TableLayout>

    </LinearLayout>
</ScrollView>
